{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "jsx": "react-jsx", // Use react-jsx for compatibility with modern React
    "lib": [ "dom", "dom.iterable", "esnext" ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [ "jest", "node", "react" ], // Ensure react types are included
    "paths": {
      "@/*": [ "src/*" ]
    }
  },
  "include": [ "src/**/*", "__tests__/**/*" ],
  "exclude": [ "node_modules" ],
  "mapCoverage": false // Disable source map coverage
}
