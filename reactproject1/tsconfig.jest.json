{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true, // Generate source maps
    "inlineSources": true, // Include sources in the source maps
    "outDir": "./dist", // Specify an output directory if needed
    "baseUrl": "./",
    "paths": {
      "@/*": [ "src/*" ]
    }
  },
  "include": [ "src/**/*.ts", "src/**/*.tsx" ],
  "exclude": [ "node_modules" ]
}
